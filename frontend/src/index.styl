@import 'nib'
@import url('https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap');

vendor-prefixes = o ms moz webkit official
negro = #333333
blanco = #ffffff
amarrillo = #ffe600
gris = #eee
grisoscuro = #666
gristexto = #999
azul = #3483FA

body{
    background-color: gris !important
    font-family: 'Lato', sans-serif;
    *:focus{
        box-shadow: none !important;
        text-decoration: none !important;
    }
    .header{
        background-color: amarrillo
        padding: 7px 0px
        a{
            img{
                height 34px
                width auto
            }
        }
        form{
            width 100%
            padding-left 20px
            .input-group{
                .form-control{
                    border-radius: 0px
                    border none
                    padding-left 20px
                }
                .input-group-append{
                    .btn{
                        border-radius: 0px
                        border none
                        background-color gris
                        img{
                            height 18px
                            width auto
                        }
                    }
                }
            }
        }
    }
    .breadcrumb{
        background-color transparent
        padding: 16px 0px
        margin-bottom: 0px
        .breadcrumb-item{
            color gristexto
            font-size 12px
            a{
                color gristexto
                font-weight 700
            }
        }
    }
    .caja-body{
        background-color: blanco
        border-radius: 4px
        width: 100%
        padding 16px
        margin-bottom: 32px
        .caja-items{
            padding 16px
            display flex
            align-items: flex-start
            border-bottom: 1px solid gris
            flex-direction: row
            &:hover{
                background-color gris
                text-decoration: none
            }
            &:last-child{
                border-bottom: none
            }
            .caja-items-imagen{
                padding-right: 16px
                img{
                    width 180px
                    height 180px
                    border-radius 4px
                }
            }
            .caja-items-informacion{
                flex 1
                padding: 16px 16px
                .caja-items-informacion-titulo{
                    display: flex
                    flex-direction: row
                    align-items: center
                    margin-bottom: 22px
                    p{
                        font-size: 24px
                        font-weight: 300
                        margin-bottom: 0px
                        color grisoscuro
                        line-height: 20px
                    }
                    img{
                        width 18px
                        height 18px
                        margin-left 10px
                    }
                }
                h3{
                    font-size: 18px
                    font-weight: 300
                    color grisoscuro
                }
            }
            .caja-items-ubicacion{
                padding 16px 16px
                width 180px
                p{
                    font-size: 12px
                    color grisoscuro
                }
            }
        }
        .item-detalle{
            img{
                width: 100%
                height auto
            }
            .item-detalle-descripcion{
                padding 32px
                h3{
                    font-size: 28px
                    color grisoscuro
                }
                p{
                    font-size: 14px
                    color grisoscuro
                    text-align justify
                }
            }
            .item-detalle-informacion{
                padding: 16px 32px 16px 16px
                p{
                    font-size: 14px
                    color grisoscuro
                }
                h1{
                    font-size: 24px
                    color grisoscuro
                    margin-bottom: 32px
                }
                h3{
                    font-size: 46px
                    color grisoscuro
                    margin-bottom: 32px
                }
            }
        }
    }
}